<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- bean : 객체 , class 필수적으로 있어야함.-->
	<bean id="memberDao" class="org.example.di.dao.MemberDao"></bean>
	<bean id="daoImpl" class="org.example.di.dao.DaoImpl"/>
	
	<bean id="memberregSvc" class="org.example.di.service.MemberRegisterService"> <!-- MemberRegisterService : 생성자 dao 주입-->
		<!-- constructor-arg : 주입의 규칙, 정의 | 생성자로 만들었을때 아래와같이 처리된다. -->
		<constructor-arg>
			<ref bean="memberDao"/>
		</constructor-arg>
	</bean>

	<!-- 위의 코드를 좀 더 간결하게 처리하는 것.-->
	<bean id="memberPwSvc" class="org.example.di.service.ChangePasswordService">
		<constructor-arg ref="memberDao" />
	</bean>
	











</beans>
